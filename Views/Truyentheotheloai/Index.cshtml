@model IEnumerable<MangaStore.Models.MACOMIC>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div style="margin-left: 400px; margin-top : 200px;">
    <h2 style="color: red;">XẾP TRUYỆN THEO THỂ LOẠI</h2>

    <p>
        @Html.ActionLink("THÊM MỚI", "Create")
    </p>
    <table class="table">


        <tr>
            <th>
                MÃ MC
            </th>
            <th>
                MÃ THỂ lOẠI
            </th>

            <th>
                MÃ TRUYỆN
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MC)

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaTL)

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaTruyen)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.MC }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.MC })
        </td>
    </tr>
        }

    </table>
</div>
