<!DOCTYPE html>
<html lang="en">
<head>

    <title>Yêu Thích | Manga World</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <link rel="shortcut icon" href="~/assets/Logo2.ico">
    <link rel="icon" href="~/assets/Logo2.ico" />

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="../../assets/vendor/font-awesome/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="../../assets/vendor/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="../../assets/vendor/animate.css/animate.css">
    <link rel="stylesheet" href="../../assets/vendor/bootstrap-select/dist/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="../../assets/vendor/slick-carousel/slick/slick.css" />
    <link rel="stylesheet" href="../../assets/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.css">

    <link rel="stylesheet" href="../../assets/css/theme.css">
</head>
<body>
    @RenderBody()
    <div class="page-header border-bottom">
        <div class="container">
            <div class="d-md-flex justify-content-between align-items-center py-4">
                <h1 class="page-title font-size-3 font-weight-medium m-0 text-lh-lg">Truyện Yêu Thích</h1>
                <nav class="woocommerce-breadcrumb font-size-2">
                    <a href="/Kind/Index" class="h-primary">Thể Loại</a>
                    <span class="breadcrumb-separator mx-1"><i class="fas fa-angle-right"></i></span>Truyện Yêu Thích
                    </nav>
            </div>
        </div>
    </div>
    <div class="site-content bg-punch-light overflow-hidden" id="content">
        <div class="container">
            <header class="entry-header space-top-2 space-bottom-1 mb-2">
                <h1 class="entry-title font-size-7">Truyện Yêu Thích : @ViewBag.Tongsoluong</h1>
            </header>
            <div class="row pb-8">
                <div id="primary" class="content-area">
                    <main id="main" class="site-main ">
                        <div class="page type-page status-publish hentry">

                            <div class="entry-content">
                                <div class="woocommerce">
                                    <form class="woocommerce-cart-form table-responsive" action="#" method="post">
                                        <table class="shop_table shop_table_responsive cart woocommerce-cart-form__contents">
                                            <thead>
                                                <tr>
                                                    <th class="product-id">Mã Truyện </th>
                                                    <th class="product-name">Tên Truyện</th>
                                                    <th class="product-pic">Ảnh Bìa</th>
                                                    <th class="product-price">Đơn Giá</th>
                                                    <th class="product-detail">&nbsp;</th>
                                                    <th class="product-update">&nbsp;</th>
                                                    <th class="product-remove">&nbsp;</th>


                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                <tr class="woocommerce-cart-form__cart-item cart_item">
                                                    <td class="product-id" data-title="Product-id">
                                                        <div class="d-flex align-items-center">
                                                            <div class="ml-3 m-w-200-lg-down">
                                                                <a href="@Url.Action("Chitiettruyen", "Kind", new { id = item.iMaTruyen })">@item.iMaTruyen</a>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="product-name" data-title="Product-Name">
                                                        <div class="d-flex align-items-center">
                                                            <div class="ml-3 m-w-200-lg-down">
                                                                <a href="#">@item.sTenTruyen</a>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="product-pic" data-title="Pic">
                                                        <img src="~/assets/img/ImagesBody/@item.sAnhbia" style="height: 250px;">
                                                    </td>
                                                    <td class="product-price" data-title="Price">
                                                        <div class="d-flex align-items-center">
                                                            <div class="ml-3 m-w-200-lg-down">
                                                                <a href="#">@item.sGiaban</a>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="product-detail">
                                                        <a href="@Url.Action("Chitiettruyen", "Kind", new { id = item.iMaTruyen })" class="detail" aria-label="detail this item">
                                                            <i class="fas fa-info" width="15px" height="15px"></i>
                                                            <path fill-rule="evenodd" fill="rgb(22, 22, 25)" d="M15.011,13.899 L13.899,15.012 L7.500,8.613 L1.101,15.012 L-0.012,13.899 L6.387,7.500 L-0.012,1.101 L1.101,-0.012 L7.500,6.387 L13.899,-0.012 L15.011,1.101 L8.613,7.500 L15.011,13.899 Z"></path>
                                                        </a>
                                                    </td>
                                                    <td class="product-update">
                                                        <a href="#" class="update" aria-label="update this item">
                                                            <i class="fas fa-edit" width="15px" height="15px"></i>
                                                            <path fill-rule="evenodd" fill="rgb(22, 22, 25)" d="M15.011,13.899 L13.899,15.012 L7.500,8.613 L1.101,15.012 L-0.012,13.899 L6.387,7.500 L-0.012,1.101 L1.101,-0.012 L7.500,6.387 L13.899,-0.012 L15.011,1.101 L8.613,7.500 L15.011,13.899 Z"></path>
                                                        </a>
                                                    </td>
                                                    <td class="product-remove">
                                                        <a href="@Url.Action("XoaThich", "Thich", new { id = item.iMaTruyen })" class="remove" aria-label="remove this item">
                                                            <i class="fas fa-trash-alt" width="15px" height="15px" style="padding-right: 150px;"></i>
                                                            <path fill-rule="evenodd" fill="rgb(22, 22, 25)" d="M15.011,13.899 L13.899,15.012 L7.500,8.613 L1.101,15.012 L-0.012,13.899 L6.387,7.500 L-0.012,1.101 L1.101,-0.012 L7.500,6.387 L13.899,-0.012 L15.011,1.101 L8.613,7.500 L15.011,13.899 Z"></path>

                                                        </a>
                                                    </td>
                                                </tr>
                                                }
                                            <tr>

                                                <td colspan="5" class="actions">

                                                    <a href="@Url.Action("Xoatatcatruyenthich","Thich")"> Xóa tất cả truyện yêu thích </a>

                                                </td>


                                            </tr>

                                            </tbody>
                                        </table>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </main>
                </div>
            </div>
        </div>
    </div>
    <footer class="site-footer_v7">
        <div class="space-1 space-lg-3 bg-dark">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-lg-4">
                        <div class="mb-5 mb-lg-0">
                            <h4 class="font-size-3 font-weight-medium mb-2 mb-xl-5 pb-xl-1 text-gray-500">Thông Tin</h4>
                            <address class="font-size-2 mb-5">
                                <span class="mb-2 font-weight-normal text-white">
                                    497 Phan Van Tri , Go Vap  <br> VietNam
                                </span>
                            </address>
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4">
                        <div class="mb-5 mb-lg-0">
                            <h4 class="font-size-3 font-weight-medium mb-2 mb-xl-5 pb-xl-1 text-gray-500">Liên Hệ</h4>
                            <div class="mb-4">
                                <a href="https://myaccount.google.com/?hl=vi&utm_source=OGB&utm_medium=act" class="font-size-2 d-block mb-1 text-white">hoangdanghuy222@gmail.com</a>
                                <a href="tel:0836841560" class="font-size-2 d-block text-white">
                                    0836841560
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4">
                        <div class="mb-5 mb-lg-0">
                            <h4 class="font-size-3 font-weight-medium mb-2 mb-xl-5 pb-xl-1 text-gray-500">Theo Dõi</h4>
                            <ul class="list-unstyled mb-0 d-flex">
                                <li class="btn pl-0">
                                    <a class="text-white" href="https://www.instagram.com/_emoghl/">
                                        <span class="fab fa-instagram"></span>
                                    </a>
                                </li>
                                <li class="btn">
                                    <a class="text-white" href="https://www.facebook.com/huydang2805/">
                                        <span class="fab fa-facebook-f"></span>
                                    </a>
                                </li>
                                <li class="btn">
                                    <a class="text-white" href="https://twitter.com/Zen_Habuto">
                                        <span class="fab fa-twitter"></span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="py-3 bg-black">
            <div class="container py-1">
                <div class="d-md-flex text-center text-md-left justify-content-between align-items-center">

                    <p class="mb-3 mb-lg-0 font-size-2 text-gray-500">©2022 MangaWorld . Thiên Đường Truyện Tranh</p>

                    <div class="d-md-flex justify-content-md-end align-items-center">

                        <select class="js-select selectpicker dropdown-select" data-style="bg-transparent border-0 text-gray-500 px-4 py-2 rounded-0 height-5 outline-none shadow-none form-control font-size-2" data-dropdown-align-right="true">
                            <option value="one" selected>Hoàng Đăng Huy (Nhóm 7)</option>
                            <option value="two">Vũ Luân</option>
                            <option value="three">Công Minh</option>
                            <option value="four">Phạm Vũ</option>
                        </select>

                    </div>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>