
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutGioHang.cshtml";
}
<div class="page-header border-bottom">
    <div class="container">
        <div class="d-md-flex justify-content-between align-items-center py-4">
            <h1 class="page-title font-size-3 font-weight-medium m-0 text-lh-lg">Danh Sách Mua Hàng</h1>
            <nav class="woocommerce-breadcrumb font-size-2">
                <a href="/Kind/Index" class="h-primary">Thể Loại</a>
                <span class="breadcrumb-separator mx-1"><i class="fas fa-angle-right"></i></span>Danh Sách Mua Hàng
            </nav>
        </div>
    </div>
</div>
<div class="site-content bg-punch-light overflow-hidden" id="content">
    <div class="container">
        <header class="entry-header space-top-2 space-bottom-1 mb-2">
            <h1 class="entry-title font-size-7">Danh Sách Mua Hàng Của Bạn: @ViewBag.Tongsoluong</h1>
        </header>
        <div class="row pb-8">
            <div id="primary" class="content-area">
                <main id="main" class="site-main ">
                    <div class="page type-page status-publish hentry">

                        <div class="entry-content">
                            <div class="woocommerce">
                                <form class="woocommerce-cart-form table-responsive" action="#" method="post">
                                    <table class="shop_table shop_table_responsive cart woocommerce-cart-form__contents">
                                        <thead>
                                            <tr>
                                                <th class="product-name">Tên Truyện</th>
                                                <th class="product-price">Đơn Giá</th>
                                                <th class="product-quantity">Số Lượng</th>
                                                <th class="product-subtotal">Thành Tiền</th>
                                                <th class="product-detail">&nbsp;</th>
                                                <th class="product-remove">&nbsp;</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr class="woocommerce-cart-form__cart-item cart_item">
                                                    <td class="product-name" data-title="Product-Name">
                                                        <div class="d-flex align-items-center">
                                                            <div class="ml-3 m-w-200-lg-down">
                                                                <a href="#">@item.sTenTruyen</a>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="product-price" data-title="Price">
                                                        <span class="woocommerce-Price-amount amount"><span class="woocommerce-Price-currencySymbol">@String.Format("{0:0.000}", item.dDongia)</span>đ</span>
                                                    </td>
                                                    @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { id = item.iMaTruyen }))
                                                    {
                                                        <td class="product-quantity">
                                                            <div class="quantity d-flex align-items-center">

                                                                <div class="border px-3 width-120">
                                                                    <div class="js-quantity">
                                                                        <div class="d-flex align-items-center">

                                                                            <input type="number" class="input-text qty text js-result form-control text-center border-0" step="1" min="1" max="100" name="txtSoluong" value="@item.iSoluong" title="Qty">

                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td class="product-subtotal" data-title="Total">
                                                            <span class="woocommerce-Price-amount amount"><span class="woocommerce-Price-currencySymbol">@String.Format("{0:0.000}", item.dThanhtien)</span>đ</span>
                                                        </td>
                                                        <td class="product-detail">
                                                            <a href="@Url.Action("Chitiettruyen", "Kind", new { id = item.iMaTruyen })" class="detail" aria-label="detail this item">
                                                                <i class="fas fa-info" width="15px" height="15px"></i>
                                                                <path fill-rule="evenodd" fill="rgb(22, 22, 25)" d="M15.011,13.899 L13.899,15.012 L7.500,8.613 L1.101,15.012 L-0.012,13.899 L6.387,7.500 L-0.012,1.101 L1.101,-0.012 L7.500,6.387 L13.899,-0.012 L15.011,1.101 L8.613,7.500 L15.011,13.899 Z"></path>
                                                            </a>
                                                        </td>
                                                     
                                                        <td class="product-remove">
                                                            <a href="@Url.Action("Xoagiohang", "Giohang", new { id = item.iMaTruyen })" class="remove" aria-label="remove this item">
                                                                <i class="fas fa-trash-alt" width="15px" height="15px" style="padding-right: 150px;"></i>
                                                                <path fill-rule="evenodd" fill="rgb(22, 22, 25)" d="M15.011,13.899 L13.899,15.012 L7.500,8.613 L1.101,15.012 L-0.012,13.899 L6.387,7.500 L-0.012,1.101 L1.101,-0.012 L7.500,6.387 L13.899,-0.012 L15.011,1.101 L8.613,7.500 L15.011,13.899 Z"></path>

                                                            </a>
                                                        </td>

                                                    }
                                                </tr>
                                            }
                                            <tr>
                                                <td colspan="9" style="text-align:center;"> Tổng tiền: @String.Format("{0:0.000}", ViewBag.Tongtien) VNĐ </td>
                                            </tr>
                                            <tr>

                                                <td colspan="5" class="actions">

                                                    <a href="@Url.Action("Dathang","Giohang")"> ĐẶT HÀNG  </a>
                                                </td>


                                                <td colspan="5" class="actions">

                                                    <a href="@Url.Action("Xoatatcagiohang","Giohang")"> Xóa tất cả giỏ hàng </a>

                                                </td>

                                            </tr>

                                        </tbody>
                                    </table>
                                </form>
                            </div>
                        </div>

                    </div>
                </main>
            </div>
        </div>
    </div>
</div>

