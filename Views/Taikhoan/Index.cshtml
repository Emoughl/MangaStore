@model IEnumerable<MangaStore.Models.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div style="margin-left: 400px; margin-top : 200px;">
    <h2 style="color: red;">QUẢN LÝ DANH SÁCH TÀI KHOẢN</h2>

    <p>
        @Html.ActionLink("THÊM MỚI", "Create")
    </p>
    <table class="table">


        <tr>
            <th>
                MÃ TÀI KHOẢN
            </th>

            <th>
                EMAIL
            </th>
            <th>
                MẬT KHẨU
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaUser)

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Matkhau)

        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.MaUser }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.MaUser })
        </td>
    </tr>
        }

    </table>
</div>

