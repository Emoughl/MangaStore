@model MangaStore.Models.THELOAI
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div style="margin-left: 400px; margin-top : 200px;">
    <h3>XÁC NHẬN XÓA THỂ LOẠI</h3>
    <h4 style="color:red">Bạn chắc chắn xóa thể loại này?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã Thể Loại :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaTL)
        </dd>

        <dt>
            Tên Thể Loại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenTL)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay Lại", "Index")
        </div>
    }
</div>
