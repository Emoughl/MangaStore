@model MangaStore.Models.THELOAI
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin-left: 400px; margin-top : 200px;">
        <h4>CHỈNH SỬA THÔNG TIN THỂ LOẠI</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaTL)
        <div class="form-group">
           Mã Thể Loại
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaTL, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaTL, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Tên Thể Loại
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTL, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTL, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU" class="btn btn-default" />
                | @Html.ActionLink("Quay Lại", "Index")
            </div>
        </div>
    </div>
}
