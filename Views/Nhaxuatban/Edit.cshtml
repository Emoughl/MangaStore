@model MangaStore.Models.NHAXUATBAN
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="margin-left: 400px; margin-top : 200px;">
    <h4>CHỈNH SỬA THÔNG TIN NHÀ XUẤT BẢN</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaNXB)
    <div class="form-group">
        Mã Nhà Xuất Bản
        <div class="col-md-10">
            @Html.EditorFor(model => model.MaNXB, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MaNXB, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        Tên Nhà Xuất Bản
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenNXB, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenNXB, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="LƯU" class="btn btn-default" />
            | @Html.ActionLink("Quay Lại", "Index")
        </div>
    </div>
</div>
}



